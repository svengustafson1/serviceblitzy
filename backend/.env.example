# Server configuration
PORT=5000
NODE_ENV=development

# Database configuration
DATABASE_URL=postgres://username:password@localhost:5432/home_services

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Firebase Admin SDK
GOOGLE_APPLICATION_CREDENTIALS=path/to/firebase-adminsdk.json

# Stripe configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Connect configuration
STRIPE_CLIENT_ID=your_stripe_connect_client_id
STRIPE_PAYOUT_THRESHOLD=50
STRIPE_PAYOUT_INTERVAL=weekly

# WebSocket configuration
WEBSOCKET_PORT=5001
REDIS_URL=redis://localhost:6379
WEBSOCKET_JWT_SECRET=your_websocket_jwt_secret

# AWS S3 configuration for file uploads
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/csv

# AI recommendation configuration
AI_RECOMMENDATION_WEIGHTS={"rating":0.4,"responseTime":0.2,"completionRate":0.3,"proximity":0.1}
AI_FEATURE_CONFIG_PATH=./config/ai-features.json

# Recurring schedule configuration
RRULE_DEFAULT_WKST=MO
SCHEDULE_CONFLICT_RESOLUTION=reschedule

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email configuration (optional)
EMAIL_SERVICE=smtp.example.com
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@homeservices.com